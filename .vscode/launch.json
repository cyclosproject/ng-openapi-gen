{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Run tests",
      "program": "${workspaceFolder}/node_modules/.bin/vitest",
      "args": [
        "run"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "stopOnEntry": false,
      "skipFiles": [
        "<node_internals>/**",
        "node_modules/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Run directly",
      "program": "${workspaceFolder}/dist/lib/index.js",
      "args": [
        "-i",
        "${workspaceFolder}/test/all-types.json",
        "-o",
        "${workspaceFolder}/out/all-types",
        "--fetch-timeout",
        "2000"
      ]
    }
  ]
}
