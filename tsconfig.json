{
  "compilerOptions": {
    "module": "CommonJS",
    "esModuleInterop": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "declaration": true,
    "paths": {
      "*": [
        "node_modules/*",
        "lib/types/*"
      ]
    },
    "types": [
      "node",
      "vitest/globals"
    ],
    "lib": [
      "es2017",
      "dom"
    ]
  },
  "include": [
    "lib/**/*",
    "test/**/*",
    "vitest.config.ts"
  ]
}
